{
  "name": "backend",
  "version": "0.0.0",
  "description": "Backend for BTES project",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "yarn lint:check --fix",
    "clean": "rimraf dist",
    "generate": "tsoa spec-and-routes",
    "compile": "tsc",
    "launch:dev": "ts-node src/server.ts",
    "launch:prod": "node dist/server.js",
    "build": "run-s clean generate compile",
    "serve:dev": "run-s generate launch:dev",
    "serve:prod": "run-s build launch:prod",
    "start": "nodemon",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ping": "^1.4.0",
    "lodash": "^4.17.20",
    "socket.io": "^3.0.4",
    "swagger-ui-express": "^4.1.4",
    "tsoa": "^3.5.1"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.11.8",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "lint-staged": "^10.4.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}
