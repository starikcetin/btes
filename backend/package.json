{
  "name": "backend",
  "version": "0.0.0",
  "description": "Backend for BTES project",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "lint:check": "eslint .",
    "lint:fix": "yarn lint:check --fix",
    "clean": "rimraf dist",
    "generate": "tsoa spec-and-routes",
    "compile": "tsc",
    "launch:dev": "ts-node src/server.ts",
    "launch:prod": "node dist/server.js",
    "build": "run-s clean generate compile",
    "serve:dev": "run-s generate launch:dev",
    "serve:prod": "run-s build launch:prod",
    "start": "nodemon",
    "precommit": "lint-staged",
    "kill": "dotenv cross-var kill-port $REST_PORT $SOCKET_PORT",
    "sync-lock": "node scripts/yarn-sync.js --workspace",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "db:start": "dotenv cross-var -- mongod --dbpath=$DB_PATH",
    "db:stop": "mongo admin --eval \"db.shutdownServer();quit();\""
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "bs58": "^4.0.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-ping": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "jsum": "^1.0.1",
    "lodash": "^4.17.21",
    "mongoose": "^5.12.4",
    "ripemd160": "^2.0.2",
    "secp256k1": "^4.0.2",
    "socket.io": "^4.0.1",
    "swagger-ui-express": "^4.1.6",
    "tsoa": "^3.6.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/body-parser": "^1.19.0",
    "@types/bs58": "^4.0.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/jest-expect-message": "^1.0.3",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.168",
    "@types/mongoose": "^5.10.5",
    "@types/node": "^14.14.37",
    "@types/ripemd160": "^2.0.0",
    "@types/secp256k1": "^4.0.1",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.20.0",
    "cross-var": "^1.1.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "jest-expect-message": "^1.0.2",
    "jest-extended": "^0.11.5",
    "kill-port": "^1.6.1",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "lint-staged": {
    "*": [
      "eslint --fix"
    ]
  }
}
